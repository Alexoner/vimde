{
    "coc.preferences.jumpCommand": "tab drop",
    "coc.preferences.useQuickfixForLocations": true,
    "coc.preferences.extensionUpdateCheck": "weekly",
    "coc.source.around.enable": false,
    "suggest.enablePreselect": false,
    "suggest.noselect": true,
    "suggest.labelMaxLength": 160,
    "#suggest.floatEnable": true,
    "#suggest.pumFloatConfig": {
      "maxWidth": 160,
      "highlight": "CocFloating",
      "shadow": true
    },
    "clangd.fallbackFlags": [
        "-pedantic", "-std=c++17", "-Wall", "-Wextra",
        "-Werror=uninitialized", "-Werror=return-type", "-Werror=shadow", "-Werror=narrowing", "-Werror=conversion",
        "-Wno-sign-conversion",
        "-Werror=float-equal",
        "-Wformat=2",
        "-Wcast-qual",
        "-Wcast-align",
        "-Wlogical-op",
        "-Wshift-overflow=2",
        "-Wduplicated-cond",
        "-g",
        "-DDEBUG", "-D_GLIBCXX_DEBUG", "-D_GLIBCXX_DEBUG_PEDANTIC",
        "-O2"
    ],
    "languageserver": {
        "#clangd": {
            "command": "clangd",
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json"
            ],
            "filetypes": [],
            "#filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ]
        }
    },
    "diagnostic.level": "warning",
    "diagnostic-languageserver.filetypes": {
        "python": "flake8",
        "sh": "shellcheck"
    },
    "diagnostic-languageserver.linters": {
        "pylint": {
            "sourceName": "pylint",
            "command": "pylint",
            "args": [
                "--output-format",
                "text",
                "--score",
                "no",
                "--msg-template",
                "'{line}:{column}:{category}:{msg} ({msg_id}:{symbol})'",
                "%file"
            ],
            "formatPattern": [
                "^(\\d+?):(\\d+?):([a-z]+?):(.*)$",
                {
                    "line": 1,
                    "column": 2,
                    "security": 3,
                    "message": 4
                }
            ],
            "rootPatterns": [
                ".git",
                "pyproject.toml",
                "setup.py"
            ],
            "securities": {
                "informational": "hint",
                "refactor": "info",
                "convention": "info",
                "warning": "warning",
                "error": "error",
                "fatal": "error"
            },
            "offsetColumn": 1,
            "formatLines": 1
        },
        "flake8": {
        }
    },
    "diagnostic-languageserver.formatters": {
        "black": {
            "command": "black",
            "args": [ "-q", "-" ]
        },
        "isort": {
            "command": "isort",
            "args": [ "-q", "-" ]
        },
        "docformatter": {
            "command": "docformatter",
            "args": [ "-" ]
        }
    },
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=119",
        "--ignore=E203,W503,W504"
    ],
    "snippets.autoTrigger": false,
    "snippets.snipmate.enable": false,
    "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": true,
    "markdownlint.config": {
        "default":true,
        "line_length": false
    }
}
